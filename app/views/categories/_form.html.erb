<div class="container">
    <%= render 'shared/errors', obj: @category%>

    <%= form_with(model: @category, local: true) do |f| %>

    <p>
        <%= f.label :name,"Category Name", class: "form-label" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter a new category name" %>
    </p>

    <%= f.submit "Create Category", class: "mb-5 btn btn-primary" %>


    <% end %>
</div>