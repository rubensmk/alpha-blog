<main class="container p-5">
    <h1>Article Details</h1>
    <p><strong>Author: </strong><%=@article.user.username if @article.user %></p>
    <p><strong>Title: </strong><%= @article.title %></p>
    <p><strong>Description: </strong><%= @article.description %></p>
    <%= link_to "Return to articles list", articles_path, class: "btn btn-outline-success" %>

    <% if logged_in? && (@article.user == current_user || current_user.admin? ) %>
        <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info" %>
        <%= link_to "Delete", article_path(@article), class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    <% end %>
    
</main>
