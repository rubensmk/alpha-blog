<h1>Create a new article</h1>

<% if @article.errors.any? %>
    <h2>The following errors prevented the article to be created</h2>
    <% @article.errors.full_messages.each do |msg|%>
    <span><%= msg %></span><br/>
    <% end %>
<% end %>



<%= form_with scope: :article, data: { turbo: false }, url: articles_path, local: true do |f| %>

<p>
    <%= f.label :title%><br/>
    <%= f.text_field :title%>
</p>

<p>
    <%= f.label :description%><br/>
    <%= f.text_area :description%>
</p>

<p>
    <%= f.submit %>
</p>

<% end %>