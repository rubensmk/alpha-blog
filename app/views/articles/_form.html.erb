
<% if @article.errors.any? %>
        <h2>The following errors prevented the article to be created</h2>
        <% @article.errors.full_messages.each do |msg|%>
        <span><%= msg %></span><br/>
        <% end %>
<% end %>

<%= form_with(model: @article, local: true) do |f| %>
    <div class="mb-3">
        <%= f.label :title, class:"form-label" %>
        <%= f.text_field :title, class:"form-control", placeholder: "Insert a title"%>
        </div>
        <div class="mb-3">
        <%= f.label :description, class:"form-label" %>
        <%= f.text_area :title, class:"form-control", placeholder: "Insert description", rows: 3 %>
    </div>

    <%= f.submit class: "btn btn-primary mb-5" %>
    
<% end %>

